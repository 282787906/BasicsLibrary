<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/scan_view_rl_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/scan_view_rl_preView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/scan_view_view_top"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/translucent">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/scan_view_rl_cropView"
                android:layout_weight="1"
                android:background="@color/translucent">
            </View>

            <RelativeLayout
                android:id="@+id/scan_view_rl_cropView"
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true">
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/scan_view_rl_cropView"
                android:layout_weight="1"
                android:background="@color/translucent"
                >
            </View>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/translucent">
        </View>

    </LinearLayout>
</RelativeLayout>
