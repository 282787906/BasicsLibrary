<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liqg.basicslibrary.activity.HttpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/nohttp_ProgressBar"

                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="50"
                />
           <EditText
                android:id="@+id/nohttp_et_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/nohttp_but_Get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get"/>

            <Button
                android:id="@+id/nohttp_but_GetHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get_Head"/>
            <EditText
                android:id="@+id/nohttp_et_DownLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/nohttp_but_Download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"/>

                <Button
                    android:id="@+id/nohttp_but_Download2SD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download2SD"/>
            </LinearLayout>


            <EditText
                android:id="@+id/nohttp_et_Upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
           <Button
            android:id="@+id/nohttp_but_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="upload"/>

            <TextView
                android:id="@+id/nohttp_tv_Msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"/>
        </LinearLayout></ScrollView>

</RelativeLayout>

